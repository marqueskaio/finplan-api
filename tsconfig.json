{
    "compilerOptions": {
      "sourceMap": true,
      "rootDir": "src",
      "baseUrl": "src",
      "target": "ES2017",
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "dist",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  